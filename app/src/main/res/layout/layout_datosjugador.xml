<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@mipmap/fondo"
    android:weightSum="1"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ingrese cantidad de jugadores"
        android:id="@+id/txt_cantidad"
        android:textColor="#fffff9fb"
        android:singleLine="true"
        android:layout_weight="0.07" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/npick_cantidadjugadores"
        android:layout_gravity="center_horizontal|top"
        android:layout_weight="0.07"
        android:background="#bd949890" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jugar"
        android:id="@+id/btn_iniciarpartida"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="respuesta"
        android:id="@+id/txt_respuesta"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.07" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar nombre jugadores"
        android:id="@+id/btn_editarjugadores"
        android:layout_weight="0.07"
        android:layout_gravity="center|bottom" />

</LinearLayout>