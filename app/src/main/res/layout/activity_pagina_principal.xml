<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".PaginaPrincipal"

    android:background="@mipmap/fondo"
    android:orientation="vertical">

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btn_nuevapartida"
        android:background="@android:drawable/ic_media_play"
        android:elegantTextHeight="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Nueva partida"
        android:id="@+id/textView3"
        android:textColor="#ff000000"
        android:textSize="20dp"
        android:layout_below="@+id/btn_nuevapartida"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="50dp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btn_cargar"
        android:background="@android:drawable/stat_notify_sync"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Cargar partida anterior"
        android:id="@+id/textView5"
        android:textColor="#ff000000"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btn_salon"
        android:layout_below="@+id/btn_reglas"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/star_big_on"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="SalÃ³n de la fama"
        android:id="@+id/textView7"
        android:layout_below="@+id/btn_salon"
        android:layout_centerHorizontal="true"
        android:textColor="#ff000000"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btn_reglas"
        android:layout_below="@+id/btn_cargar"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/ic_menu_help"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Reglas"
        android:id="@+id/textView6"
        android:textColor="#ff000000"
        android:textSize="20dp"
        android:layout_below="@+id/btn_reglas"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView_prueba_rescata" />

</LinearLayout>
