<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ahorcado"
        android:id="@+id/textView9"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/img_ahorcado"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_palabraAhorcado"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="A"
                android:id="@+id/btna"
                android:layout_column="0"
                android:textSize="15dp" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="B"
                android:id="@+id/btnb"
                android:layout_column="2"
                android:textSize="15dp" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="C"
                android:id="@+id/btnc"
                android:layout_column="4"
                android:textSize="15dp" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="D"
                android:id="@+id/btnd"
                android:layout_column="6"
                android:textSize="15dp" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="E"
                android:id="@+id/btne"
                android:layout_column="8"
                android:textSize="15dp" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="F"
                android:id="@+id/btnf"
                android:layout_column="10"
                android:textSize="15dp" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="G"
                android:id="@+id/btng"
                android:layout_column="12"
                android:textSize="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="H"
                android:id="@+id/btnh"
                android:layout_column="0"
                android:textSize="15dp" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="I"
                android:id="@+id/btni"
                android:layout_column="2"
                android:textSize="15dp" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="J"
                android:id="@+id/btnj"
                android:layout_column="4"
                android:textSize="15dp" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="K"
                android:id="@+id/btnk"
                android:layout_column="6"
                android:textSize="15dp" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="L"
                android:id="@+id/btnl"
                android:layout_column="8"
                android:textSize="15dp" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="M"
                android:id="@+id/btnm"
                android:layout_column="10"
                android:textSize="15dp" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="N"
                android:id="@+id/btnn"
                android:layout_column="12"
                android:textSize="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="Ã‘"
                android:id="@+id/btnnn"
                android:layout_column="0"
                android:textSize="15dp" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="O"
                android:id="@+id/btno"
                android:layout_column="2"
                android:textSize="15dp" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="P"
                android:id="@+id/btnp"
                android:layout_column="4"
                android:textSize="15dp" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="Q"
                android:id="@+id/btnq"
                android:layout_column="6"
                android:textSize="15dp" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="R"
                android:id="@+id/btnr"
                android:layout_column="8"
                android:textSize="15dp" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="S"
                android:id="@+id/btns"
                android:layout_column="10"
                android:textSize="15dp" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="T"
                android:id="@+id/btnt"
                android:layout_column="12"
                android:textSize="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp">

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="U"
                android:id="@+id/btnu"
                android:layout_column="0"
                android:textSize="15dp" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="V"
                android:id="@+id/btnv"
                android:layout_column="2"
                android:textSize="15dp" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="W"
                android:id="@+id/btnw"
                android:layout_column="4"
                android:textSize="15dp" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="X"
                android:id="@+id/btnx"
                android:layout_column="6"
                android:textSize="15dp" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="Y"
                android:id="@+id/btny"
                android:layout_column="8"
                android:textSize="15dp" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="Z"
                android:id="@+id/btnz"
                android:layout_column="10"
                android:textSize="15dp" />
        </TableRow>
    </TableLayout>
</LinearLayout>